<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <ImageView
        android:id="@+id/pictureAdd"
        android:layout_width="274dp"
        android:layout_height="222dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameAdd"
        android:layout_width="305dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Название"
        android:textColor="@color/green"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pictureAdd" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="72dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Цена:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameAdd" />

    <TextView
        android:id="@+id/priceAdd"
        android:layout_width="152dp"
        android:layout_height="34dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="стоимость"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/nameAdd" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="185dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Страна производитель:"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/countryAdd"
        android:layout_width="196dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:text="Страна"
        android:textSize="16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/priceAdd" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="82dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:text="руб/кг"
        android:textSize="16dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/priceAdd"
        app:layout_constraintTop_toBottomOf="@+id/nameAdd" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="240dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:text="Button"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultAdd" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="277dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/resultAdd"
        android:layout_width="335dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:text="Вес"
        android:textSize="16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

</androidx.constraintlayout.widget.ConstraintLayout>