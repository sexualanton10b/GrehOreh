<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/basketLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:padding="12dp">

            <ImageView
                android:id="@+id/pictureBasket"
                android:layout_width="83dp"
                android:layout_height="82dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameBasket"
                android:layout_width="148dp"
                android:layout_height="32dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Название"
                android:textColor="#2B3C2C"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/pictureBasket"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/weightBasket"
                android:layout_width="77dp"
                android:layout_height="26dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Вес"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/pictureBasket"
                app:layout_constraintTop_toBottomOf="@+id/nameBasket" />

            <TextView
                android:id="@+id/sellBasket"
                android:layout_width="142dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Стоимость"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/weightBasket"
                app:layout_constraintTop_toBottomOf="@+id/nameBasket" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="115dp"
                android:layout_height="51dp"
                android:text="Удалить"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nameBasket"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>